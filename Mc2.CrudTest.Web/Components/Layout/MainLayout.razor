@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4">
                    <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>

        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </ChildContent>
    <ErrorContent>
        <div class="border p-4 text-danger">
            Saving Customer to Database Failed, please make sure the Customer is not duplicated based on the Name and Birth Date or Email Adrress!
        </div>
        <br />
        <a href="/customers">Back to Customers List</a>
    </ErrorContent>
</ErrorBoundary>